<Window x:Class="WebUntisTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebUntisTest"
        mc:Ignorable="d"
        Title="WebUntis Test" Height="350" Width="525">
    <Grid>
    <StackPanel>
        <DockPanel VerticalAlignment="Top" Margin="20">
            <Label>School URL:</Label>
            <TextBox HorizontalAlignment="Stretch" Margin="3"
                     Name="SchoolUrlBox">https://stpl.tgm.ac.at/WebUntis/jsonrpc.do?school=tgm</TextBox>
        </DockPanel>
        <DockPanel VerticalAlignment="Top" Margin="20">
            <Label>Username</Label>
            <TextBox HorizontalAlignment="Stretch" Margin="3"
                     Name="UsernameBox"></TextBox>
        </DockPanel>
        <DockPanel VerticalAlignment="Top" Margin="20">
            <Label>Password</Label>
            <PasswordBox HorizontalAlignment="Stretch" Margin="3"
                         Name="PasswordBox"></PasswordBox>
        </DockPanel>
    </StackPanel>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Margin="10" Width="40" Click="Ok_Click">Ok</Button>
    </Grid>
</Window>
